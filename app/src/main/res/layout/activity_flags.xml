<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#384e72">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="8">

        <TextView
            style="@style/flagName"
            android:text="@string/Austria" />

        <LinearLayout
            style="@style/flag"
            android:layout_weight="6"
            android:background="#ff0000"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff" />
        </LinearLayout>

        <TextView
            style="@style/flagName"
            android:text="@string/Poland" />

        <LinearLayout
            style="@style/flag"
            android:layout_weight="6"
            android:background="#ff0000"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                tools:ignore="NestedWeights" />
        </LinearLayout>


        <TextView
            style="@style/flagName"
            android:text="@string/Italy" />

        <LinearLayout
            style="@style/flag"
            android:background="#ff0000"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009449" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff" />
        </LinearLayout>


        <TextView
            style="@style/flagName"
            android:text="@string/Columbia" />

        <LinearLayout
            style="@style/flag"
            android:background="#ff0000"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#FFE240" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00129C" />
        </LinearLayout>

        <TextView
            style="@style/flagName"
            android:text="@string/Madagasсar" />

        <RelativeLayout
            style="@style/flag"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="#ff0000" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#009449" />
        </RelativeLayout>

        <TextView
            style="@style/flagName"
            android:text="@string/Thailand" />

        <LinearLayout
            style="@style/flag"
            android:background="#ff0000"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#00129C" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff" />
        </LinearLayout>

        <TextView
            style="@style/flagName"
            android:text="@string/Denmark" />

        <RelativeLayout
            style="@style/flag"
            android:background="#ff0000">

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginStart="75dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="68dp"
                android:background="#ffffff" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>

