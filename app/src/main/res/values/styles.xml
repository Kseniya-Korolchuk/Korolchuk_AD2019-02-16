<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstMainMenuButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">#384e72</item>
        <item name="android:color">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainMenuButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">#384e72</item>
        <item name="android:color">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DzMenuButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#384e72</item>
        <item name="android:color">#ffffff</item>
    </style>

    <style name="flag">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="flagName" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LogoButtonTextView" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">@color/loginEditTextBg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:fontFamily">@fonts/monda_bold</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@fonts/monda_bold</item>
    </style>

    <style name="ButtonPrimary" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@color/buttonPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@fonts/monda_bold</item>
    </style>

    <style name="ButtonSecond" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/buttonSecond</item>
        <item name="android:fontFamily">@fonts/monda_bold</item>
    </style>
</resources>
